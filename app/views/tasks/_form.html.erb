<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="row">
  <div class="column large-6">
    <div class="field">
      <%= f.label "Titulo de la tarea" %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label "Descripcion y lugar" %><br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label "Duracion en horas" %><br>
      <%= f.text_field :duration %>
    </div>
  </div>
  <div class="column large-6">
    <div class="field">
      <%= f.label "Fecha de inicio" %><br>
        <div style="inline-block">
          <%= f.date_select :idate %>
        </div>
    </div>
    <div class="field">
      <%= f.label "Fecha de Terminacion" %><br>
      <%= f.date_select :fdate %>
    </div>
    <div class="field">
      <%= f.label "Asignado a:" %><br>
      <%= f.select :asigned, options_for_select(@users) %>
    </div>
    <div class="field">
      <%= f.label "Esta terminado?" %><br>
      <%= f.check_box :finished %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit nil, class: 'button' %>
  </div>
<% end %>
